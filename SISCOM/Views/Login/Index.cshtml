@model SISCOM.Models.LoginModel
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UsuarioContraseña</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <style>
        /* Paleta morada */
        :root {
            --primary-color: #A0153E;
            --primary-hover: #FF204E;
            --primary-dark: #5D0E41;
            --accent-color: #d3a3d3;
        }

        body {
            background-image: url('https://wallpaperaccess.com/full/1412206.jpg');
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
            color: white;
        }


        .form-label {
            color: var(--primary-color);
        }

        .btn-aceptar {
            background-color: var(--primary-color);
            border: none;
            color: white;
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            /* Efecto hover - cuando el mouse pasa sobre el botón */
            .btn-aceptar:hover {
                background-color: var(--primary-hover); /* Morado claro para el hover */
                cursor: pointer;
            }

            /* Efecto para cuando el botón está presionado (click) */
            .btn-aceptar:active {
                background-color: var(--primary-dark); /* Morado oscuro para el click */
            }

        /* Card personalizada */
        .card {
            border-radius: 15px;
            background-color: rgba(255, 255, 255, 0.85);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .card-title {
            color: var(--primary-color);
        }

        .form-control {
            border-radius: 5px;
        }

        /* Estilo para la parte inferior del formulario */
        .form-group small {
            color: var(--accent-color); /* Morado suave para el texto del captcha */
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-lg p-5" style="max-width: 400px; width: 100%;">
            <h3 class="card-title text-center mb-4">Iniciar Sesión</h3>
            <form asp-action="Index" method="post">
                <div class="mb-3">
                    <label asp-for="Usuario" class="form-label">Nombre de Usuario:</label>
                    <input class="form-control" asp-for="Usuario" required placeholder="Ingresa tu usuario" />
                </div>

                <div class="mb-3">
                    <label asp-for="Contrasea" class="form-label">Contraseña:</label>
                    <input type="password" class="form-control" asp-for="Contrasea" required placeholder="Ingresa tu contraseña" />
                </div>

                <!-- Captcha Field -->
                <div class="mb-3">
                    <label class="form-label">Captcha:</label>
                    <input class="form-control" name="Captcha" required placeholder="Ingresa el captcha" />
                    <small class="form-text text-muted">Captcha generado: <mark><i>@ViewBag.Mensaje</i></mark></small>

                    <!-- Campo oculto para almacenar el captcha generado -->
                    <input type="hidden" name="CaptchaGet" value="@ViewBag.Mensaje" />
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn-aceptar">Aceptar</button>
                </div>
            </form>

            @if (ViewBag.Error != null && ViewBag.Error != "")
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>
</body>